<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    android:fitsSystemWindows="true">

    <!-- Rastgele Harfler -->
    <TextView
        android:id="@+id/harflerTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Harfler: K E D İ"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <!-- Kullanıcının yazacağı kelime alanı -->
    <EditText
        android:id="@+id/kelimeEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Kelimeyi buraya yazın"
        android:textAlignment="center"
        android:layout_marginBottom="16dp"
        android:padding="12dp"
        android:background="@drawable/edit_text_background" />

    <!-- Butonlar (Kontrol Et ve Geç) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="16dp">

        <Button
            android:id="@+id/kontrolButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kontrol Et"
            android:layout_marginEnd="16dp"
            android:padding="12dp" />

        <Button
            android:id="@+id/gecButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Geç"
            android:padding="12dp" />
    </LinearLayout>

    <!-- Puan -->
    <TextView
        android:id="@+id/puanTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Puan: 0"
        android:textSize="18sp"
        android:textStyle="bold" />
</LinearLayout>
